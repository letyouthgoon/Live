<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorRed">

        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/font20" />

        <TextView
            android:id="@+id/profile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/font20" />

        <TextView
            android:id="@+id/profile_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/font16" />

        <TextView
            android:id="@+id/profile_hearts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_hearts"
            android:drawablePadding="5dp"
            android:textColor="@color/colorTextWhite" />

        <ImageView
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/edit" />
    </RelativeLayout>

    <com.showworld.living.views.customviews.LineControllerView
        android:id="@+id/profile_set"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:canNav="true"
        app:isBottom="true"
        app:name="@string/profile_set" />

    <com.showworld.living.views.customviews.LineControllerView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:canNav="true"
        app:isBottom="true"
        app:name="@string/profile_about" />


    <com.showworld.living.views.customviews.LineControllerView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        app:isBottom="true"
        app:name="退出" />

</LinearLayout>
